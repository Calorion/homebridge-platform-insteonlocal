{
  "pluginAlias": "InsteonLocal",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge platform plugin for local Insteon control.",
  "footerDisplay": "See [CHANGELOG](https://github.com/kuestess/homebridge-platform-insteonlocal/blob/master/CHANGELOG.md).",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "InsteonLocal",
        "required": true
      },
      "user": {
        "title": "User",
        "type": "string",
        "default": true
      },
      "pass": {
        "$title": "Pass",
        "type": "string",
        "default": true
      },
      "host": {
        "title": "Host",
        "type": "string",
        "default": true
      },
      "port": {
        "title": "Port",
        "type": "string",
        "default": "25105"
      },
      "model": {
        "title": "Model",
        "type": "string",
        "default": "2245",
        "oneOf": [
          { "title": "2245", "enum": ["2245"] },
          { "title": "2243", "enum": ["2243"] },
          { "title": "2242", "enum": ["2242"] },
          { "title": "PLM", "enum": ["PLM"] }
        ]
      },
      "refresh": {
        "title": "Refresh",
        "type": "string",
        "default": false
      },
      "server_port": {
        "title": "Server Port",
        "type": "string",
        "default": "3000"
      },
      "keepAlive": {
        "title": "Keep Alive",
        "type": "string",
        "default": false
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "required": false,
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "deviceID": {
              "title": "Device ID",
              "type": "string",
              "required": true
            },
            "dimmable": {
              "title": "Dimmable",
              "type": "string",
              "default": true
            },
            "deviceType": {
              "title": "Device Type",
              "type": "string",
              "default": "dimmer",
              "oneOf": [
                { "title": "lightbulb", "enum": ["lightbulb"] },
                { "title": "dimmer", "enum": ["dimmer"] },
                { "title": "switch", "enum": ["switch"] },
                { "title": "scene", "enum": ["scene"] },
                { "title": "remote", "enum": ["remote"] },
                { "title": "iolinc", "enum": ["iolinc"] },
                { "title": "motionsensor", "enum": ["motionsensor"] },
                { "title": "leaksensor", "enum": ["leaksensor"] },
                { "title": "doorsensor", "enum": ["doorsensor"] },
                { "title": "outlet", "enum": ["outlet"] },
                { "title": "keypad", "enum": ["keypad"] },
                { "title": "shades", "enum": ["shades"] },
                { "title": "blinds", "enum": ["blinds"] },
                { "title": "smoke", "enum": ["smoke"] },
                { "title": "fan", "enum": ["fan"] }
              ]
            },
            "groupID": {
              "title": "Group ID",
              "type": "string"
            },
            "keypadbtn": {
              "title": "Keypad Button",
              "type": "string"
            },
            "groupMembers": {
              "title": "Group Members",
              "type": "string"
            }
          }
        }
      }
    }
  }
}
